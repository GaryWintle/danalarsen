---
import defaultNewsImage from '@images/column-thumbnails/dana-news-policeraid.webp'

const {
  newsImage = defaultNewsImage,
  newsHeadline = 'Headline goes here.',
  newsSource = 'Pothead Press',
  newsDate = 'April 20, 1982',
  href = 'https://potheadbooks.com/',
} = Astro.props
import { Image } from 'astro:assets'

const parsedDate = new Date(String(newsDate))

const newsDateTime = Number.isNaN(parsedDate.getTime())
  ? undefined
  : parsedDate.toISOString().split('T')[0]

const isExternal = href.startsWith('http')
---

<li class="news-item">
  <a
    href={href}
    class="news-link"
    rel={isExternal ? 'noopener noreferrer' : undefined}
    target={isExternal ? '_blank' : undefined}
    target="_blank"
    aria-label={`Read article: ${newsHeadline} from ${newsSource}`}
  >
    <div class="news-image">
      <Image
        src={newsImage}
        alt={newsHeadline}
        loading="lazy"
        decoding="async"
      />
    </div>
    <div class="text-container">
      <h3 class="news-headline">{newsHeadline}</h3>
      <div class="news-info-text">
        <p class="news-source">{newsSource}</p>
        <time datetime={newsDateTime} class="news-date"> {newsDate}</time>
      </div>
    </div>
  </a>
</li>

<style>
  .news-link {
    display: flex;
    padding-block: var(--sp-04);
    gap: var(--sp-03);
    transition: transform 200ms ease-out;
  }

  .news-link:hover {
    transform: translateX(-2px);
  }

  .news-image {
    width: 9.8rem;
    aspect-ratio: 1 / 1;
    border-radius: var(--br-01);
    overflow: hidden;
    flex-shrink: 0;
    border: var(--image-border);
  }
  .news-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .text-container {
    display: flex;
    flex-direction: column;
    gap: var(--sp-01);
  }

  .news-info-text {
    display: flex;
    flex-direction: column;
  }
</style>
