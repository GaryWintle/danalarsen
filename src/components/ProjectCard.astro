---
import { Image } from 'astro:assets'
import PotheadBooks from '@images/project-photos/projects-potheadbooks.png'
import Button from '@components/Button.astro'
const { src, title, text, href } = Astro.props
---

<a href={href}>
  <div class="card">
    <div class="card-image-container">
      <Image src={src} alt={title} loading="lazy" />
      <div class="card-text-container">
        <h3>{title}</h3>
        <p class="body-text">
          {text}
        </p>
        <Button color="secondary">potheadbooks.com</Button>
      </div>
    </div>
  </div></a
>

<style>
  .card {
    width: 100%;
    height: max(45rem, 100%);
    overflow: hidden;
    background-color: var(--neutral-100);
    border-radius: var(--br-02);
    box-shadow: var(--shadow-shallow);
    border: var(--image-border);
  }

  .card-text-container {
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
    gap: var(--sp-02);
    padding-inline: var(--sp-05);
    padding-block: var(--sp-06);
  }

  .card-image-container {
    aspect-ratio: 4 / 3;
    position: relative;
  }
  .card-image-container::after {
    aspect-ratio: 4 / 3;
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      oklch(from var(--neutral-500) l c h / 0.15),
      transparent 70%
    );
    z-index: 1;
  }

  .card-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .body-text {
    margin-bottom: var(--sp-04);
  }
</style>
