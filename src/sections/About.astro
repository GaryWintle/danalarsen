    background: right / contain no-repeat url('/images/dana-about.webp');
  }

  .about::before {
    content: '';
    position: absolute;
    inset: 0;
    background: center / cover no-repeat url('/images/dana-about.webp');
    filter: grayscale(1);
    opacity: 0.2;
    background-color: rgba(0, 80, 160, 0.6);
    background-blend-mode: multiply;
    z-index: -1;
  }

  .about::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      oklch(from var(--blue-300) 44% c h),
      var(--blue-300)
    );
    z-index: -2;
  }

  .about-container {
    width: var(--max-width);
    position: relative;
    z-index: 2;
  }

  .about-card {
    background-color: var(--bg-surface);
    border-radius: var(--br-02);
