---
import Button from '@components/Button.astro'
---
<header>
  <div class="container">
    <h1><span class="name-highlight">Dana Larsen</span> is an Advocate & Activist for Sensible Drug Policy to <span class="text-highlight">End</span> the War on Drugs.</h1>
    <div class="buttons-container">
      <Button color="primary">Speak with Dana</Button>
      <Button color="secondary">About Dana</Button></div>
    
  </div>
  <div></div>
</header>

<style>
  header {
    display: grid;
    grid-template-columns: 0.9fr 1.1fr;
    justify-content: center;
    align-content: center;
    width: 100%;
    height: 90vh;
    background-image: url("/images/dl-hero-desktop.webp");
    background-size: cover;
    background-position: center;
    padding-inline: var(--section-inline);
  }
  .container {
    display: flex;
    flex-direction: column;
    gap: var(--layout-03);
    width: min(var(--max-width), 100%);
    height: 50%;
  }
  .buttons-container {
    display: flex;
    gap: var(--sp-05);
    padding-inline: var(--sp-02);
  }

  .name-highlight {
    color: var(--blue-100)
  }
  .text-highlight {
    color: var(--blue-100);
    font-style: italic;
  }
</style>

