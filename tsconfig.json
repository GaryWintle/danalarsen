{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@sections/*": ["src/sections/*"],
      "@styles/*": ["src/styles/*"],
      "@images/*": ["src/assets/images/*"],
      "@graphics/*": ["src/assets/graphics/*"],
      "@data/*": ["src/data*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
